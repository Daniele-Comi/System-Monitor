<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_gravity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_gyroscope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_magnetic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
    <it.gmariotti.cardslib.library.view.CardView
        android:id="@+id/card_sensors_pressure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </it.gmariotti.cardslib.library.view.CardView>
</LinearLayout>
</ScrollView>