<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">
    
        <ScrollView
        android:id="@+id/card_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dataUploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:text="Upload"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dataDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dataDownloaded"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dataUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/dataUploaded"
                android:layout_marginBottom="17dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/signalMobileImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/dataDownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dataUploaded"
                android:layout_alignBottom="@+id/dataUploaded"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="13dp"
                android:text="Download"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

       </RelativeLayout>
            
            <it.gmariotti.cardslib.library.view.CardView
                android:id="@+id/card_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card_scrollview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
            </it.gmariotti.cardslib.library.view.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
